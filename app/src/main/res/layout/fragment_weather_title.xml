<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FragmentWeatherTitle"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    tools:context=".fragments.WeatherTitle">

    <TextView
        android:id="@+id/FragmentWeatherTitleTempFact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="5dp"
        android:text="temp_fact"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/FragmentWeatherTitleImage" />

    <TextView
        android:id="@+id/FragmentWeatherTitleTempDay"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:text="Day"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="@+id/FragmentWeatherTitleTempFact"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/FragmentWeatherTitleImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/_01d"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/FragmentWeatherTitleTempTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginBottom="5dp"
        android:text="WeatherTitle"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toEndOf="@+id/FragmentWeatherTitleTempFact" />

</androidx.constraintlayout.widget.ConstraintLayout>